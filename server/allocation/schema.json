{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Calculate result request",
    "description": "The request to the server to calculate the best allocation.",
    "type": "object",
    "properties": {
        "events": {
            "description": "All events of all project days.",
            "type": "object",
            "patternProperties": {
                "^event_[1-9][0-9]*$": {
                    "description": "One event.",
                    "type": "object",
                    "properties": {
                        "days": {
                            "description": "List of the days where this event is present.",
                            "type": "array",
                            "items": {
                                "type": "string",
                                "pattern": "^day_[1-9][0-9]*$"
                            },
                            "minItems": 1,
                            "uniqueItems": true
                        },
                        "amount": {
                            "description": "Number of pupils that can visit this event each day.",
                            "type": "number",
                            "minimum": 1
                        },
                        "classes": {
                            "description": "Pupils of this classes can visit this event.",
                            "type": "object",
                            "properties": {
                                "names": {
                                    "description": "Names of the classes",
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "minLength": 1
                                    },
                                    "minItems": 1,
                                    "uniqueItems": true
                                },
                                "amount": {
                                    "description": "Number of classes that must be present.",
                                    "type": "number",
                                    "minimum": 1
                                }
                            },
                            "required": [
                                "names",
                                "amount"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "required": [
                        "days",
                        "amount",
                        "classes"
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "pupils": {
            "description": "All pupils",
            "type": "object",
            "patternProperties": {
                "^pupil_[1-9][0-9]*$": {
                    "description": "One pupil.",
                    "type": "object",
                    "properties": {
                        "class": {
                            "description": "The pupil's class.",
                            "type": "string",
                            "minLength": 1
                        },
                        "special": {
                            "description": "Set to true if this pupil a special pupil.",
                            "type": "boolean"
                        },
                        "fixedAllocation": {
                            "description": "The pupils is set to this event on the given day without any choices.",
                            "type": "object",
                            "patternProperties": {
                                "^day_[1-9][0-9]*$": {
                                    "type": "string",
                                    "pattern": "^event_[1-9][0-9]*$"
                                }
                            },
                            "additionalProperties": false
                        },
                        "choices": {
                            "description": "Choices of the pupil. Events that are neither green nor red are considered as yellow.",
                            "type": "object",
                            "properties": {
                                "green": {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "pattern": "^event_[1-9][0-9]*$"
                                    },
                                    "uniqueItems": true
                                },
                                "red": {
                                    "type": "array",
                                    "items": {
                                        "type": "string",
                                        "pattern": "^event_[1-9][0-9]*$"
                                    },
                                    "uniqueItems": true
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "required": [
                        "class",
                        "choices"
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "config": {
            "description": "Configuration options for the allocation e. g. rules and parameters.",
            "type": "object",
            "properties": {
                "howManySpecialPupils": {
                    "description": "Maximum number of special pupils in one event.",
                    "type": "number",
                    "minimum": 1
                },
                "timeout": {
                    "description": "Maximum number of seconds the server should run to find his best result.",
                    "type": "number",
                    "minimum": 1
                },
                "numberOfCycles": {
                    "description": "Maximum number of cycles the server should try to enhance a result.",
                    "type": "number",
                    "minimum": 0
                }
            },
            "required": [
                "howManySpecialPupils"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "events",
        "pupils",
        "config"
    ],
    "additionalProperties": false
}
